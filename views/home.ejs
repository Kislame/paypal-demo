<main class="space-y-8 container mx-auto mt-12">
  <h1 class="text-4xl">Home Page</h1>
  <div class="border border-slate-300 p-4 shadow-md space-y-6 w-fit">
    <p class="text-2xl">FULL GSAP COURSE</p>
    <p class="text-xl">price: $100.00</p>

    <form action="/pay" method="post">
      <input
        class="py-2 px-3 bg-black text-white text-lg"
        type="submit"
        value="BUY"
      />
    </form>
  </div>

  <div class="mt-8 flex gap-8">
    <a class="text-lg bg-slate-700 text-white px-2 py-3 w-fit" href="/donate"
      >Donate here</a
    >
    <a
      class="text-lg bg-slate-700 text-white px-2 py-3 w-fit"
      href="/newsletter"
      >Sign Up For Our Newsletter</a
    >
  </div>

  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-center mb-6">
      Subscribe to our Newsletter
    </h2>
    <form id="newsletter-sub-form" class="space-y-4">
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700"
          >Email address</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
        />
      </div>
      <div>
        <button
          type="submit"
          class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition-colors"
        >
          Subscribe
        </button>
      </div>
    </form>
    <p id="success-message" class="hidden text-green-500 text-center mt-4">
      Thank you for subscribing!
    </p>
  </div>

  <script>
    document
      .getElementById('newsletter-sub-form')
      .addEventListener('submit', function (event) {
        event.preventDefault();
        // Fake form submission handler for Google Analytics
        console.log('Newsletter form submitted');

        // Simulate successful submission (you can track this with Google Analytics later)
        document.getElementById('success-message').classList.remove('hidden');
      });
  </script>
</main>
